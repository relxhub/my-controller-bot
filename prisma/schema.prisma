generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int      @id @default(autoincrement())
  telegramId       BigInt   @unique
  username         String?
  state            String   @default("IDLE") // IDLE, WAITING_FORWARD, WAITING_CONTENT, WAITING_BUTTONS
  draft            String?
  selectedChannelId String? // จำว่า User กำลังจะโพสต์ลง Channel ไหน
  channels         Channel[] // ความสัมพันธ์: User คนนี้เป็นเจ้าของกี่ Channel
  createdAt        DateTime @default(now())
}

model Channel {
  id          String   @id @default(uuid())
  telegramId  BigInt   @unique // ID ของ Channel จริงๆ (เช่น -10012345678)
  title       String   // ชื่อ Channel
  addedById   Int
  addedBy     User     @relation(fields: [addedById], references: [id])
  createdAt   DateTime @default(now())
}